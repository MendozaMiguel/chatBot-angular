{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": ["es5", "es2017", "dom"],
    "target": "ES5",
    "paths": {
      "@angular/*": [
        "./node_modules/@angular/*"
      ]
    }
  },
  "include": [
    "./node_modules/angular-ai-chat-bot/*.ts",
     "./node_modules/angular-ai-chat-bot/**/*.ts",
     "./src/main.ts",
      "./src/polyfills.ts"
    ],
}